<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="//cdn.jsdelivr.net/alertifyjs/1.10.0/css/alertify.min.css"/>
    <link href="../public/css/profile.min.css" type="text/css" rel="stylesheet">
    <title>Poller</title>
  </head>
  <body>
    <nav id="mainNav" class="navbar navbar-default navbar-custom navbar-fixed-top">
      <div class="container">
          <div class="navbar-header page-scroll">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                  <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
              </button>
              <a class="navbar-brand page-scroll" href="/">Poller</a>
          </div>

          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav navbar-right">
                  <li class="hidden">
                      <a href="#page-top"></a>
                  </li>
                  <li>
                    <a class="page-scroll nav-list" href="/logout">Logout</a>
                  </li>
                  <li>
                      <a class="page-scroll nav-list" href="#portfolio">Polls</a>
                  </li>
                  <li>
                      <a class="page-scroll nav-list" href="/profile"><%= user %></a>
                  </li>
              </ul>
          </div>
      </div>
    </nav>

    <section id="profile-body">
        <div class="container">
           <section id="left">
                <span class="info"><strong>Name:</strong> <%= name %></span> <br/>
                <span class="info"><strong>Username:</strong> <%= user %></span> <br/>
                <div id="buttons">
                    <a href="/newpoll">
                        <button id="newpoll" class="btn btn-primary">
                            New Poll
                        </button>
                    </a>
                    <button class="btn btn-primary" type="button">
                        Polls <span class="badge"><%= polls.length %></span>
                    </button>
                </div>
           </section>
           <section id="right">
               <%- messages('message-layout', locals) %>
               <% if (polls.length > 0) { %>
                <% polls.map(poll => { %>
                    <div class="well well-lg" id="posts">                   
                        <div class="panel panel-default">
                            <div class="panel-heading"><%= poll.poll.title %></div>
                            <div class="panel-body">
                                <% poll.poll.options.map(option => { %>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                                            <span class="sr-only">60% Complete</span>
                                            <span class="progress-type"><%= option[0] %></span>                                            
                                        </div>                                        
                                        <span class="progress-completed">60%</span>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                        <a href="/poll/<%= poll._id %>"><button class="btn btn-primary">View Poll</button></a>
                        <a href="/edit/<%= poll._id %>"><button class="btn btn-primary">Edit Poll</button></a>
                        <a href="/delete/<%= poll._id %>"><button class="btn btn-danger">Delete Poll</button></a>
                    </div>   
                <% }) %> 
               <% } else { %>
                <div class="well well-lg" id="posts">                   
                    <span class="text-center" id="no-post">No posts...</span>
                </div>      
               <% } %>                         
           </section>
         </div>
    </section>

    <!-- JS files -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js"> </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"></script>
    <script src="//cdn.jsdelivr.net/alertifyjs/1.10.0/alertify.min.js"></script>
    <script src="../public/js/main-profile.js"></script>
    <!--  -->
  </body>
</html>
